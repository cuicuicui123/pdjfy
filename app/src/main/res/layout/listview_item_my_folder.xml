<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/white_press_grey"
    android:padding="@dimen/padding_kind"
    android:gravity="center_vertical">
    <ImageView
        android:id="@+id/iv"
        android:layout_width="@dimen/file_image_size"
        android:layout_height="@dimen/file_image_size"
        android:scaleType="fitCenter"/>
    <TextView
        android:id="@+id/tv_file_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_content"
        android:textColor="@color/black"
        android:layout_marginLeft="@dimen/margin_kind"/>
</LinearLayout>