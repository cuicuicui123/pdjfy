<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="请选择日期"
            android:gravity="center"
            android:padding="@dimen/padding_border"
            android:textColor="@color/white"
            android:background="@color/blue"
            android:textSize="@dimen/text_size_title"/>

        <DatePicker
            android:id="@+id/datePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:calendarViewShown="false"
            android:datePickerMode="spinner"/>

        <include
            layout="@layout/divider"></include>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:background="@color/white"
                android:text="取消"
                android:textColor="@drawable/text_color_blue_press_dark_blue"
                android:textSize="@dimen/text_size_child_title"
                android:gravity="center"
                android:layout_margin="@dimen/margin_border"/>
            <include
                layout="@layout/divider_column"></include>
            <TextView
                android:id="@+id/tv_sure"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@color/white"
                android:text="确定"
                android:textColor="@drawable/text_color_blue_press_dark_blue"
                android:textSize="@dimen/text_size_child_title"
                android:gravity="center"
                android:layout_margin="@dimen/margin_border"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
