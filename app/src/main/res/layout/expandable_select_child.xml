<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/padding_border"
    android:paddingBottom="@dimen/padding_border"
    android:paddingRight="@dimen/padding_border"
    android:paddingLeft="@dimen/padding_expandable"
    android:id="@+id/rl">
    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_content"
        android:textColor="@color/black"
        android:layout_centerVertical="true"/>

    <ImageView
        android:id="@+id/iv_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/padding_content"
        android:src="@drawable/select"
        android:layout_alignParentRight="true"/>

</RelativeLayout>