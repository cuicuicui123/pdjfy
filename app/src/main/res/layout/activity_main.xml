<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/blue">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_bottom_bar_height"
        android:weightSum="5"
        android:background="@color/blue"
        android:layout_alignParentBottom="true"
        android:id="@+id/ll_bottom"
        android:elevation="@dimen/elevation_bottom_bar">
        <ImageButton
            android:id="@+id/btn_announcement"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_announcement"
            android:background="@color/blue"
            android:padding="@dimen/padding_content"/>
        <ImageButton
            android:id="@+id/btn_schedule"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_schedule"
            android:background="@color/blue"
            android:padding="@dimen/padding_content"/>
        <ImageButton
            android:id="@+id/btn_document"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_document"
            android:background="@color/blue"
            android:padding="@dimen/padding_content"/>
        <ImageButton
            android:id="@+id/btn_official"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_official"
            android:background="@color/blue"
            android:padding="@dimen/padding_content"/>
        <ImageButton
            android:id="@+id/btn_notice"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_notice"
            android:background="@color/blue"
            android:padding="@dimen/padding_content"/>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:id="@+id/fl_all"
        android:layout_above="@id/ll_bottom"></FrameLayout>

</RelativeLayout>